# Environment configuration for Air-gapped Data Utility (ADU)
# Copy this file to .env and update the values for your environment

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_DEBUG=false
FORCE_HTTPS=false

# Database Configuration
ADU_DB_PATH=/opt/adu/data/adu.db

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your-fernet-key-here

# Gunicorn Configuration (for production deployment)
PORT=5000
GUNICORN_WORKERS=4
GUNICORN_ACCESS_LOG=/var/log/adu/gunicorn_access.log
GUNICORN_ERROR_LOG=/var/log/adu/gunicorn_error.log
GUNICORN_LOG_LEVEL=info

# SSL Configuration (optional)
# SSL_KEYFILE=/path/to/private.key
# SSL_CERTFILE=/path/to/certificate.crt

# Worker Configuration
WORKER_LOG_PATH=/var/log/adu/worker.log

# Data Export Configuration
DEFAULT_EXPORT_PATH=/opt/adu/exports